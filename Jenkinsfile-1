pipeline {
    agent any
    stages {
       stage('Pull Docker Image') {
            steps {
                script {
                    // Menarik image Docker dari Docker Hub
                    bat 'docker pull flyway/flyway:8.5.1'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    // Menjalankan container Docker
                    bat 'docker run --rm flyway/flyway:8.5.1 info'
                }
            }
        }
    }
}